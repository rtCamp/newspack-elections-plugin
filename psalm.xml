<?xml version="1.0"?>
<psalm
    errorLevel="1"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    findUnusedBaselineEntry="true"
    findUnusedCode="false"
	autoloader="./bin/psalm/bootstrap.php"
	phpVersion="8.1"
>	
	
    <projectFiles>
        <directory name="./includes"/>
		 <ignoreFiles>
			<file name="./includes/govpack-functions-template.php" />
			<directory name="./includes/deprecated" />
			<directory name="./includes/Importer/deprecated" />
			<directory name="./includes/Tax" />

		</ignoreFiles>
    </projectFiles>
	<plugins>
		<pluginClass class="PsalmWordPress\Plugin">
			<requireAllParams value="false" />
		</pluginClass>
	</plugins>
	<issueHandlers>
		<PropertyNotSetInConstructor errorLevel="suppress" />
		<RedundantPropertyInitializationCheck errorLevel="suppress" />
		<PluginIssue name="HookNotFound" errorLevel="suppress" />
	</issueHandlers>
</psalm>

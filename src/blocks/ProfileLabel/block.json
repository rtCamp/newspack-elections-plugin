{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "govpack/profile-label",
	"title": "Label",
    "editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./index.css",
	"category": "newspack-elections",
	"supports" : {
		"anchor": true,
		"align": true,
		"align-wide": true,
		"aria-label": true,
		"color" : {
			"background" : true,
			"enableContrastChecker": true,
			"gradients": true,
			"text": true	
		},
		"layout" : {
			"allowSwitching": false,
			"default" : {
				"type" : "flex"
			}
		},
		"shadow": true, 
		"spacing": {
			"margin": true,  
			"padding": true, 
			"blockGap": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true,
			"textAlign": true
		}
	},
	"attributes": {
		"label" : {
			"type": "string"
		}
	},
	"ancestor": [ "govpack/profile-row", "govpack/profile-field" ],
	"usesContext": [
		"govpack/showLabel", 
		"govpack/showLabels", 
		"govpack/fieldKey",
		"govpack/fieldType",
		"govpack/field",
		"postType",
		"postId"
	]
}

{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "govpack/profile-row-group",
	"title": "Profile Row Group",
    "editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./index.css",
	"category": "govpack",
	"supports" : {
		"align" : true,
		"align-wide": true,
		"layout" : {
			"allowSwitching": false,
			"allowJustification": true,
			"allowEditing": true,
			"default" : {
				"type" : "flex"
			}
		},
		"spacing": {
			"margin": true,  
			"padding": true
		}
	},
	"attributes": {
		"showSeparator" : {
			"type" : "boolean",
			"default" : true
		},
		"separatorHeight": {
			"type": "string",
			"default": "1px"
		},
		"separatorMargin": {
			"type": "object"
		}
	},
	"ancestor": [ "govpack/profile-v2" ],
	"usesContext": ["govpack/profileId", "postType"],
	"providesContext": {
		"govpack/separatorHeight" : "separatorHeight",
		"govpack/separatorMargin" : "separatorMargin"
	},
	"allowedBlocks": ["govpack/profile-field", "govpack/profile-separator"]
}

{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "govpack/profile-row-group",
	"title": "Profile Row Group",
    "editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./index.css",
	"category": "newspack-elections",
	"supports" : {
		"align" : true,
		"alignWide": true,
		"layout" : {
			"allowSwitching": false,
			"allowJustification": true,
			"allowSizingOnChildren": true,
			"allowEditing": true,
			"default" : {
				"type" : "flex"
			}
		},
		"spacing": {
			"margin": true,  
			"padding": true,
			"blockGap" : true
		}
	},
	"attributes": {
		"layout":{
			"type" : "object",
			"default" : {
				"type":"flex",
				"orientation":"vertical",
				"justifyContent":"stretch"
			}
		},
		"showSeparator" : {
			"type" : "boolean",
			"default" : true
		},
		"separatorStyles" : {
			"type": "object",
			"default" : {}
		},
		"separatorColor" : {
			"type": "string"
		},
		"separatorCustomColor" : {
			"type": "string"
		}
	},
	"ancestor": [ "govpack/profile-v2" ],
	"usesContext": ["govpack/profileId", "postType"],
	"providesContext": {
		"govpack/separatorStyle" : "separatorStyles",
		"govpack/separatorColor" : "separatorColor",
		"govpack/separatorCustomColor" : "separatorCustomColor"
	},
	"allowedBlocks": ["govpack/profile-row", "govpack/profile-separator", "core/post-title", "core/post-featured-image", "core/post-excerpt"]
}

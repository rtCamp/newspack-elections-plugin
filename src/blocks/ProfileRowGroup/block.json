{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "npe/profile-row-group",
	"title": "Profile Row Group",
    "editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./index.css",
	"category": "newspack-elections",
	"supports" : {
		"align" : true,
		"alignWide": true,
		"layout" : {
			"allowSwitching": false,
			"allowJustification": true,
			"allowSizingOnChildren": false,
			"allowEditing": true,
			"default" : {
				"type" : "flex",
				"justifyContent": "stretch",
				"orientation": "vertical"
			}
		},
		"spacing": {
			"margin": true,  
			"padding": true,
			"blockGap" : true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true,
			"textAlign": true
		}
	},
	"attributes": {
		"layout":{
			"type" : "object",
			"default" : {
				"type":"flex",
				"orientation":"vertical",
				"justifyContent":"stretch"
			}
		},
		"showSeparator" : {
			"type" : "boolean",
			"default" : true
		},
		"showLabels" : {
			"type" : "boolean",
			"default" : true
		},
		"separatorStyles" : {
			"type": "object",
			"default" : {}
		},
		"separatorColor" : {
			"type": "string"
		},
		"separatorCustomColor" : {
			"type": "string"
		}
	},
	"ancestor": [ "npe/profile" ],
	"usesContext": [
		"postType",
		"postId"
	],
	"providesContext": {
		"npe/separatorStyle" : "separatorStyles",
		"npe/separatorColor" : "separatorColor",
		"npe/separatorCustomColor" : "separatorCustomColor",
		"npe/showLabels" : "showLabels"
	},
	"allowedBlocks": [

		"npe/profile-row", 
		"npe/profile-read-more", 
		"npe/profile-separator", 
		"npe/profile-bio",
		"npe/profile-name",

		"core/post-featured-image", 
	
		"core/heading",
		"core/paragraph",
		"core/group"
	]
}

{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "govpack/profile-link",
	"title": "Link",
    "editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./index.css",
	"category": "newspack-elections",
	"supports" : {
		"anchor": true,
		"align": true,
		"align-wide": true,
		"aria-label": true,
		"color" : {
			"background" : true,
			"button": true,
			"enableContrastChecker": true,
			"gradients": true,
			"heading": true,
			"link": true,
			"text": true	
		},
		"layout" : {
			"allowSwitching": false,
			"default" : {
				"type" : "flex"
			}
		},
		"shadow": true, 
		"spacing": {
			"margin": true,  
			"padding": true, 
			"blockGap": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true,
			"textAlign": true,
			"__experimentalFontFamily": true,
			"__experimentalTextDecoration": true,
			"__experimentalFontStyle": true,
			"__experimentalFontWeight": true,
			"__experimentalLetterSpacing": true,
			"__experimentalTextTransform": true,
			"__experimentalWritingMode": true
		}
	},
	"attributes": {
		"label" : {
			"type": "string"
		},
		"linkFormat" : {
			"type": "string",
			"enum": ["url", "link", "icon", "button"]
		}
	},
	"ancestor": [ "govpack/profile-row", "govpack/profile-field", "govpack/profile-v2" ],
	"usesContext": ["govpack/profileId", "postType", "govpack/profileField"]
}
